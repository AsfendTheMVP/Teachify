<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Teachify.Pages.ChangePasswordPage">
    <ContentPage.Content>
        <StackLayout Margin="20" VerticalOptions="CenterAndExpand">
            <Image Source="key.png"/>
            <Entry Placeholder="Old Password" IsPassword="True" x:Name="EntOldPassword"/>
            <Entry Placeholder="New Password" IsPassword="True" x:Name="EntNewPassword"/>
            <Entry Placeholder="Confirm Password" IsPassword="True" x:Name="EntConfirmPassword"/>
            <Button BackgroundColor="#FF9F00" CornerRadius="30" HeightRequest="40" TextColor="White" Text="Change Password" x:Name="BtnChangePassword" Clicked="BtnChangePassword_OnClicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>