<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Teachify.Pages.ForgotPasswordPage">
    <ContentPage.Content>
        <StackLayout Margin="10" VerticalOptions="CenterAndExpand">
            <Image Source="key.png"/>
            <Label FontSize="Large" TextColor="#707070" HorizontalOptions="Center" Text="Forgot Your Password?"/>
            <Label FontSize="Small" Margin="45,10,45,0" TextColor="#707070" Text="To recover your password , you need to enter your registered  email address. We will send the new password to your email"/>
            <Entry Margin="20" Placeholder="Type Your Email" PlaceholderColor="#707070" x:Name="EntEmail"/>
            <Button Margin="20" BackgroundColor="#FF9F00" CornerRadius="30" HeightRequest="40" TextColor="White" Text="Send" x:Name="BtnSend" Clicked="BtnSend_OnClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>